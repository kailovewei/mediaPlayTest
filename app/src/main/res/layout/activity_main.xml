<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:orientation="horizontal">
       <Button
           android:id="@+id/music_play_Id"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textAllCaps="false"
           android:text="music_play"/>
       <Button
           android:id="@+id/music_pause_Id"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textAllCaps="false"
           android:text="music_pause"/>
       <Button
           android:id="@+id/music_stop_Id"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:textAllCaps="false"
           android:layout_weight="3"
           android:text="musci_stop"/>
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/video_play_Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="video_play"/>
        <Button
            android:id="@+id/video_pause_Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="video_pause"/>
        <Button
            android:id="@+id/video_reply_Id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_weight="3"
            android:text="video_reply"/>
    </LinearLayout>
    <VideoView
        android:id="@+id/video_Id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
